{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npx expo:*)",
      "Bash(npx tsc:*)",
      "Bash(npx eas:*)",
      "Bash(adb:*)",
      "Bash(git:*)",
      "Bash(maestro:*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "mcp__maestro__*"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.local)",
      "Read(**/secrets/**)",
      "Read(**/*.keystore)",
      "Bash(rm -rf /)",
      "Bash(git push --force)"
    ]
  },
  "env": {
    "EXPO_NO_TELEMETRY": "1"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "if [ \"$CLAUDE_CODE_REMOTE\" = \"true\" ]; then npm install --prefer-offline; fi"
          }
        ]
      }
    ]
  }
}
