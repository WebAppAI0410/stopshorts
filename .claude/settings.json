{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npx expo:*)",
      "Bash(npx tsc:*)",
      "Bash(npx eas:*)",
      "Bash(adb:*)",
      "Bash(git:*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.local)",
      "Read(**/secrets/**)",
      "Read(**/*.keystore)",
      "Bash(rm -rf /)",
      "Bash(git push --force)"
    ]
  },
  "env": {
    "EXPO_NO_TELEMETRY": "1"
  }
}
